<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp">
    <RelativeLayout
        android:id="@+id/layout_single_consumption_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#f74242">

        <ImageView
            android:id="@+id/icon_delete_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_delete_black_24dp" />

        <TextView
            android:id="@+id/textview_delete_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:layout_toStartOf="@+id/icon_delete_consumption"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="Delete" />

        <ImageView
            android:id="@+id/icon_edit_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_edit_black_24dp"/>


        <TextView
            android:id="@+id/textview_edit_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@+id/icon_edit_consumption"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="Edit" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_single_consumption_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView_consumptions_sugars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="26g"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/textView_consumption_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:text="KitKat"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/textView_consumption_infoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_consumptions_sugars"
            android:layout_alignParentRight="true"
            android:text="in x serving(s)"
            android:textAlignment="textEnd" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>