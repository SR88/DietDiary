<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:id="@+id/layout_single_food_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#f74242">

    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_delete_black_24dp" />

    <TextView
        android:id="@+id/textview_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:layout_toStartOf="@+id/icon_delete"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:text="Delete" />

    <ImageView
        android:id="@+id/icon_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_edit_black_24dp"/>


    <TextView
        android:id="@+id/textview_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:layout_toEndOf="@+id/icon_edit"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:text="Edit" />


    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/layout_single_food_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="8dp">


        <TextView
            android:id="@+id/textview_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Food Name Here"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <TextView
            android:id="@+id/textview_food_foodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_food_name"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Food Type" />

        <TextView
            android:id="@+id/textview_food_grams_sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_food_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Grams Sugar"
            android:layout_toStartOf="@+id/textview_food_foodtype"
            android:layout_alignParentStart="true"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>